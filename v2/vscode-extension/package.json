{
  "name": "malice-lsp",
  "displayName": "Malice MOO Language Support",
  "description": "TypeScript language support for Malice MOO objects",
  "version": "0.1.0",
  "publisher": "malice",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onFileSystem:malice"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "malice.openObject",
        "title": "Malice: Open Object"
      },
      {
        "command": "malice.browseObjects",
        "title": "Malice: Browse Objects"
      },
      {
        "command": "malice.refresh",
        "title": "Malice: Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "malice.refresh",
          "when": "view == malice-objects",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "malice-explorer",
          "title": "Malice MOO",
          "icon": "resources/malice-icon.svg"
        }
      ]
    },
    "views": {
      "malice-explorer": [
        {
          "id": "malice-objects",
          "name": "Objects"
        }
      ]
    },
    "configuration": {
      "title": "Malice",
      "properties": {
        "malice.devtoolsUrl": {
          "type": "string",
          "default": "ws://localhost:9999",
          "description": "Malice DevTools WebSocket server URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "ws": "^8.14.0"
  }
}
